<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundImageViewProduct">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
    </style>

    <style name="product_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="recycler_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>